<div class="row">
  <div class="col-sm-6">
    <h1>Insumos</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to insumos_orders_path, class: 'btn btn-primary' do %>
    Ver ordenes
  <% end %>

  <%= link_to new_insumo_path, class: 'btn btn-primary' do %>
    Agregar
  <% end %>

  </div>
</div>

<div class="table-responsive">
  <table id="myTable" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

            <th>Cantidad</th>
            <th>Nombre</th>
            <th>Valor</th>

            <th>Cantidad disponible</th>
            <th>Bodega</th>
            <th>Estado</th>

          <th></th>
          <th></th>

      </tr>
    </thead>

    <tbody>
      <% @insumos.each do |insumo| %>
        <%= content_tag :tr, id: dom_id(insumo), class: dom_class(insumo) do %>

                      <td><%= insumo.cantidad %></td>
                      <td><%= insumo.nombre %></td>
                      <td><%= number_with_delimiter(insumo.valor) %></td>

                      <td><%= insumo.total_disponible %></td>
                      <td><%= insumo.bodega %></td>
                      <td><%= insumo.estado %></td>


            <td><%= link_to 'Ver', insumo %></td>

            <td><%= link_to 'Prestar', new_insumo_insumos_order_path(insumo) %></td>


        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
