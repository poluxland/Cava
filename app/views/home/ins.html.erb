<div class="row">
  <div class="col-sm-6">
    <h1>Insumos entregados</h1>
  </div>

  <div class="col-sm-6 text-right">
  <% if params[:id].nil? %>
    <%= link_to insumos_path, class: 'btn btn-primary' do %>
      Volver
    <% end %>
  <% else %>
    <%= link_to new_insumo_insumos_order_path(params[:id]), class: 'btn btn-primary' do %>
      Nueva orden
    <% end %>
  <% end %>
 </div>
</div>

<div class="table-responsive">
  <table id="myTable" class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
      <tr>
            <th>Prestamo</th>
            <th>Cantidad</th>
            <th>Responsable</th>
            <th>Status</th>
            <th>Equipo</th>
            <th>Entrega</th>
            <th>Costo</th>

      </tr>
    </thead>
    <tbody>
      <% @insumos_orders.each do |insumos_order| %>
        <%= content_tag :tr, id: dom_id(insumos_order), class: dom_class(insumos_order) do %>

            <td><%= insumos_order.created_at.strftime("%Y-%m-%d") %></td>
            <td><%= insumos_order.cantidad %></td>
            <td><%= insumos_order.responsable %></td>
            <td><%= insumos_order.status ? "Activo": "Finalizado" %></td>
            <td><%= insumos_order.insumo.nombre %></td>
            <td><%= insumos_order.updated_at.strftime("%Y-%m-%d") unless insumos_order.status  %></td>
            <td><%= insumos_order.insumo.valor.to_i * insumos_order.cantidad.to_i %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
