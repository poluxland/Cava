<div class="row">
  <div class="col-sm-6">
    <h1>Herramientas</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to tools_orders_path, class: 'btn btn-primary' do %>
    Ver ordenes
  <% end %>

  <%= link_to new_tool_path, class: 'btn btn-primary' do %>
    Agregar
  <% end %>

  </div>
</div>

<div class="table-responsive">
  <table id="myTable" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

            <th>Cantidad</th>
            <th>Nombre</th>
            <th>Valor</th>

            <th>Cantidad disponible</th>
            <th>Bodega</th>
            <th>Estado</th>

          <th></th>
          <th></th>

      </tr>
    </thead>

    <tbody>
      <% @tools.each do |tool| %>
        <%= content_tag :tr, id: dom_id(tool), class: dom_class(tool) do %>

                      <td><%= tool.cantidad %></td>
                      <td><%= tool.nombre %></td>
                      <td><%= number_with_delimiter(tool.valor) %></td>

                      <td><%= tool.total_disponible %></td>
                      <td><%= tool.bodega %></td>
                      <td><%= tool.estado %></td>


            <td><%= link_to 'Ver', tool %></td>

            <td><%= link_to 'Prestar', new_tool_tools_order_path(tool) %></td>


        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
