<div class="row">
  <div class="col-sm-6">
    <h1>Orden de <%= @elementos_order.responsable %> </h1>
  </div>

  <div class="col-sm-6 text-right">
    <% if params[:elemento_id].nil? %>
      <%= link_to elementos_orders_path, class: 'btn btn-primary' do %>
        Volver
      <% end %>
    <% else %>
      <%= link_to elemento_path(@elementos_order.elemento), class: 'btn btn-primary' do %>
        Volver
      <% end %>
    <% end %>
    <%= link_to edit_elemento_elementos_order_path(@elementos_order.elemento_id,@elementos_order), class: 'btn btn-primary' do %>
      Editar
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Cantidad:</dt>
  <dd><%= @elementos_order.cantidad %></dd>

  <dt>Responsable:</dt>
  <dd><%= @elementos_order.responsable %></dd>

  <dt>Status:</dt>
  <dd><%= @elementos_order.status ? "Activo" : "Finalizado" %></dd>

</dl>
