<%= simple_form_for([@elemento, @elementos_order]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-group">
    <%= f.input :cantidad,collection: (-50..@elemento.total_disponible), selected: 1 %>

    <%= f.input :responsable,class: 'form-control' %>
    <%= f.label :"Centro de costo" %> <br>
    <%= f.select :unidad,  ["Envasadora", "Servicios", "Transporte", "Mecanicos", "Otros"], class: 'form-control' %>
    <br> <br>
    <%= f.input :numero_de_vale, label: 'Numero de Vale', class: 'form-control' %>
    <%= f.input :observaciones, label: 'Observaciones', class: 'form-control' %>
    <%= f.input  :status, as: :hidden %>

    <% if params[:id] %>
      <%= f.button :submit, 'Actualizar', class: 'btn btn-primary' %>
    <% else %>
      <%= f.button :submit, 'Crear', class: 'btn btn-primary' %>
    <% end %>

  </div>
<% end %>
